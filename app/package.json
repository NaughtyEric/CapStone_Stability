{
  "name": "evidence-blockchain-app",
  "version": "1.0.0",
  "description": "Desktop application for submitting image evidence to blockchain",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "lint": "eslint src/**/*.js",
    "test": "jest"
  },
  "build": {
    "appId": "com.capstone.evidence-blockchain",
    "productName": "Evidence Blockchain",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [
    "blockchain",
    "evidence",
    "sha256",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "web3": "^4.2.2",
    "uuid": "^9.0.1"
  }
}
